<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Bio</th>
          <th colspan="2"></th>
        </tr>

        <% @member.each do |member| %>
        <tr>
          <td><%= member.name %></td>
          <td><%= member.bio %></td>
          <td><%= link_to 'Show', member_path(member) %></td>
          <td><%= link_to 'Edit', edit_member_path(member) %></td>
          <td><%= link_to 'Destroy', member_path(member),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </table>

    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to 'New member', new_member_path %>
    </div>
  </div>
</div>